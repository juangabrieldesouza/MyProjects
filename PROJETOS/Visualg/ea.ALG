algoritmo "CONTADOR DE CALORIAS"
var
 S, P: real
inicio
   Escreval("Programa para calcular quantas calorias por passo se foi perdida")
   Escreva("Insira o número de metros percorrido: ")
   Leia(P)
   S <- P * 0.05
   Escreval("A quantidade de calorias perdida em ", P," metros, foi de ", S, "Klca")
fimalgoritmo